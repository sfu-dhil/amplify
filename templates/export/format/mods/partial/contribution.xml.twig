<name type="personal">
    <namePart>{{ person.sortableName }}</namePart>
    <displayForm>{{ person.fullName }}</displayForm>
    {% if person.institution %}
    <affiliation>{{ person.institution}}</affiliation>
    {% endif %}
    {% for role in roles %}
    <role>
        <roleTerm type="text" authority="marcrelator">{{ role.label }}</roleTerm>
        {% if role.relatorTerm %}
        <roleTerm type='code' authority='marcrelator'>{{ role.relatorTerm }}</roleTerm>
        {% endif %}
    </role>
    {% endfor %}
    {% if person.bio %}
    <description>{{ person.bio|html2txt }}</description>
    {% endif %}
</name>