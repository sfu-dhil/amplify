<?xml version="1.0" encoding="UTF-8"?>
<islandora_compound_object title="{{ episode.slug }}">
    {%- if episode.getAudio('audio/mpeg') or episode.getAudio('audio/x-wav') -%}
        <child content="{{ episode.slug }}/audio" />
    {%- endif -%}
    {%- for index, image in episode.images|merge(episode.season.images, episode.podcast.images) -%}
        <child content="{{ episode.slug }}/img_{{ index }}" />
    {%- endfor -%}
    {%- for index, pdf in episode.pdfs -%}
        {%- set transcriptFolder = index == 0 ? 'transcript' : 'transcript_' ~ (index - 1) -%}
        <child content="{{ episode.slug }}/{{ transcriptFolder }}" />
    {%- endfor -%}
</islandora_compound_object>