{% extends 'base.html.twig' %}

{% block title %}Contribution List{% endblock %}

{% block pageheader %}
    <h1>Contribution List</h1>
    <p class="count">
        Displaying {{ contributions|length }} contributions of {{ contributions.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('contribution_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New </a>
            {% endif %}

            <a href="{{ path('contribution_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search </a>
        </div>
    </div>

    {% embed 'contribution/partial/table.html.twig' %}
    {% endembed %}

    <div class="navigation">
        {{ knp_pagination_render(contributions) }}
    </div>

{% endblock %}
