{% extends 'base.html.twig' %}

{% block title %}Podcast Details {% endblock %}

 {% block pageheader %}
     <h1>Podcast Details</h1>
 {% endblock %}

{% block body %}

    {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <div class='btn-toolbar'>
            <div class='btn-group ms-auto'>
                <a href="{{ path('podcast_edit', {'id': podcast.id }) }}" class="btn btn-light">
                    <span class="bi bi-pencil-square"></span> Edit </a>
            </div>
            <div class='btn-group'>
                <form class='delete-form' method="post" action="{{ path('podcast_delete', {'id': podcast.id }) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token("delete" ~ podcast.id) }}">
                    <button class="btn btn-danger"><span class="bi bi-trash"></span> Delete</button>
                </form>
            </div>
        </div>
    {% endif %}

    {% embed 'podcast/partial/detail.html.twig' %}
    {% endembed %}

    <h2>Podcast Images</h2>

    {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <div class='btn-toolbar'>
            <div class='btn-group ms-auto'>
                <a href="{{ path('podcast_new_image', {'id': podcast.id }) }}" class="btn btn-light">
                    <span class="bi bi-plus"></span> Add Image </a>
            </div>
        </div>
        <div class='clearfix'></div>
    {% endif %}
    {% embed '@NinesMedia/image/ui/list.html.twig' with {
        'container': podcast,
        'path_new': 'podcast_new_image',
        'path_delete': 'podcast_delete_image',
        'path_edit': 'podcast_edit_image',
    } %}
    {% endembed %}

{% endblock %}
