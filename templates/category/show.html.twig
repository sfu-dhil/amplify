{% extends 'base.html.twig' %}

{% block title %}Category {{ category.label }}{% endblock %}

{% block breadcrumbs %}
    <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Home</a></li>
    <li class="breadcrumb-item"><a href="{{ path('category_index') }}">Categories</a></li>
    <li class="breadcrumb-item active" aria-current="page">{{ category.label }}</li>
{% endblock %}

{% block action_buttons %}
    {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <a href="{{ path('category_edit', {'id': category.id }) }}" class="btn btn-primary">
            <i class="bi bi-pencil-square"></i> Edit
        </a>
        <form class="d-inline-block" method="post" action="{{ path('category_delete', {'id': category.id }) }}" onsubmit="return confirm('Are you sure you want to delete this category?');">
            <input type="hidden" name="_method" value="DELETE">
            <input type="hidden" name="_token" value="{{ csrf_token("delete_category" ~ category.id) }}">
            <button class="btn btn-danger w-100"><i class="bi bi-trash"></i> Delete</button>
        </form>
    {% endif %}
{% endblock %}

{% block body %}
    {% embed '@NinesUtil/term/partial/show.html.twig' with {
        'term': category
    } %}
        {% block callback %}
            <tr>
                <th>Podcast</th>
                <td>
                    {% if category.podcasts|length > 0 %}
                        <ul class="list-unstyled">
                            {% for podcast in category.podcasts %}
                                <li>
                                    <a href='{{ path("podcast_show", {"id":podcast.id }) }}'>
                                        {{ podcast }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </td>
            </tr>
        {% endblock %}
    {% endembed %}
{% endblock %}
