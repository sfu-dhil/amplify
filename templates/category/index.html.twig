{% extends 'base.html.twig' %}

{% block title %}Category List{% endblock %}

{% block pageheader %}
    <h1>Category List</h1>
    <p class="count">
        Displaying {{ categories|length }} categories of {{ categories.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('category_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New </a>
            {% endif %}

            <a href="{{ path('category_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search </a>
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Label</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>

                    <td>
                        <a href="{{ path('category_show', { 'id': category.id }) }}">
                            {{ category.name }}
                        </a>
                    </td>
                    <td>
                        {{ category.label }}
                    </td>

                    <td>
                        {{ category.description }}
                    </td>

                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(categories) }}
    </div>

{% endblock %}
