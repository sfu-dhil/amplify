{% extends 'base.html.twig' %}

{% block title %}Edit Publisher {{ publisher.name }}{% endblock %}

{% block breadcrumbs %}
    <li class="breadcrumb-item"><a href="{{ path('podcast_index') }}">Podcasts</a></li>
    <li class="breadcrumb-item"><a href="{{ path('podcast_show', {id: publisher.podcast.id}) }}">{{ publisher.podcast.title }}</a></li>
    <li class="breadcrumb-item"><a href="{{ path('publisher_index', { podcast_id: publisher.podcast.id }) }}">Publishers</a></li>
    <li class="breadcrumb-item">{{ publisher.name }}</li>
    <li class="breadcrumb-item active" aria-current="page">Edit</li>
{% endblock %}

{% block body %}
    {{ form_start(form, {
        aria_label: 'Update Publisher',
    }) }}
    {{ form_widget(form) }}
    <div class="mb-3 text-center">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a href="{{ path('publisher_index', { podcast_id: publisher.podcast.id }) }}" class="btn btn-warning"> Cancel </a>
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {% include '@NinesEditor/editor/widget.html.twig' %}
{% endblock %}