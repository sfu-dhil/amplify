{% extends 'base.html.twig' %}

{% block title %}Institution Details {% endblock %}

 {% block pageheader %}
     <h1>Institution Details</h1>
 {% endblock %}

{% block body %}

    {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <div class='btn-toolbar'>
            <div class='btn-group ms-auto'>
                <a href="{{ path('institution_edit', {'id': institution.id }) }}" class="btn btn-light">
                    <span class="bi bi-pencil-square"></span> Edit </a>
            </div>
            <div class='btn-group'>
                <form class='delete-form' method="post" action="{{ path('institution_delete', {'id': institution.id }) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token("delete" ~ institution.id) }}">
                    <button class="btn btn-danger"><span class="bi bi-trash"></span> Delete</button>
                </form>
            </div>
        </div>
    {% endif %}

    {% embed 'institution/partial/detail.html.twig' %}
    {% endembed %}

{% endblock %}
