{% extends 'base.html.twig' %}

{% block title %}Person Details {% endblock %}

{% block breadcrumbs %}
    <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Home</a></li>
    <li class="breadcrumb-item"><a href="{{ path('person_index') }}">People</a></li>
    <li class="breadcrumb-item active" aria-current="page">{{ person.fullname }}</li>
{% endblock %}

{% block action_buttons %}
    {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <a href="{{ path('person_edit', {'id': person.id }) }}" class="btn btn-primary">
            <i class="bi bi-pencil-square"></i> Edit
        </a>
        <form class="d-inline-block" method="post" action="{{ path('person_delete', {'id': person.id }) }}" onsubmit="return confirm('Are you sure you want to delete this person?');">
            <input type="hidden" name="_method" value="DELETE">
            <input type="hidden" name="_token" value="{{ csrf_token("delete_person" ~ person.id) }}">
            <button class="btn btn-danger w-100"><i class="bi bi-trash"></i> Delete</button>
        </form>
    {% endif %}
{% endblock %}

{% block body %}
    <table class="table table-striped table-sm">
        <tbody>
            <tr>
                <th>Fullname</th>
                <td>
                    {{ person.fullname }}
                </td>
            </tr>
            <tr>
                <th>Sortable Name</th>
                <td>
                    {{ person.sortableName }}
                </td>
            </tr>
            <tr>
                <th>Location</th>
                <td>
                    {{ person.location }}
                </td>
            </tr>
            <tr>
                <th>Bio</th>
                <td>
                    {{ person.bio|default('')|sanitize_html }}
                </td>
            </tr>
            <tr>
                <th>Links</th>
                <td>
                    {% embed '@NinesMedia/link/partial/list.html.twig' with {
                        'entity': person } %}
                    {% endembed %}
                </td>
            </tr>
            <tr>
                <th>Institution</th>
                <td>
                    {% if person.institution %}
                        <a href='{{ path("institution_show", {"id": person.institution.id}) }}'>{{ person.institution }}</a>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Contributions</th>
                <td>
                    {% if person.contributions|length > 0 %}
                        <ul class="list-unstyled">
                            {% for contribution in person.contributions %}
                                <li>
                                    {{ contribution }}
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ person.created|date }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ person.updated|date }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
