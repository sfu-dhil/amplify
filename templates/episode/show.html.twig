{% extends 'base.html.twig' %}

{% block title %}Episode {{ episode.title }}{% endblock %}

{% block breadcrumbs %}
    <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Home</a></li>
    <li class="breadcrumb-item"><a href="{{ path('podcast_index') }}">Podcasts</a></li>
    <li class="breadcrumb-item"><a href="{{ path('podcast_show', {'id': episode.podcast.id}) }}">{{ episode.podcast.title }}</a></li>
    {% if episode.season %}
        <li class="breadcrumb-item"><a href="{{ path('season_show', {'podcast_id': episode.podcast.id, 'id': episode.season.id}) }}">{{ episode.season.title }}</a></li>
    {% endif %}
    <li class="breadcrumb-item active" aria-current="page">{{ episode.title }}</li>
{% endblock %}

{% block action_buttons %}
    {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <a href="{{ path('episode_edit', {'podcast_id': episode.podcast.id, 'id': episode.id }) }}" class="btn btn-primary">
            <i class="bi bi-pencil-square"></i> Edit
        </a>
        <form class="d-inline-block" method="post" action="{{ path('episode_delete', {'podcast_id': episode.podcast.id, 'id': episode.id }) }}" onsubmit="return confirm('Are you sure you want to delete this episode?');">
            <input type="hidden" name="_method" value="DELETE">
            <input type="hidden" name="_token" value="{{ csrf_token("delete_episode" ~ episode.id) }}">
            <button class="btn btn-danger w-100"><i class="bi bi-trash"></i> Delete</button>
        </form>
    {% endif %}
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body clearfix">
            <div class="col-auto float-md-end mb-3 ms-md-3" style="max-width: 300px">
                {% for image in episode.images %}
                    {% embed '@NinesMedia/image/partial/list-item.html.twig' with {
                        'image': image,
                        'showActions': false,
                    } %}
                    {% endembed %}
                {% endfor %}
            </div>
            <h1 class="card-title">{{ episode.title }}</h1>
            {% if episode.subTitle %}<h5 class="card-subtitle">{{ episode.subTitle }}</h5>{% endif %}
            <h5 class="card-subtitle mt-2">{{ episode.slug }}</h5>
            <div class="card-text my-3">{{ episode.description|default('')|sanitize_html }}</div>
        </div>
    </div>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 my-3 g-4">
        <div class="col">
            <h6><i class="bi bi-exclamation-octagon"></i> Explicit</h6>
            {{ episode.explicit ? 'Yes' : 'No' }}
        </div>
        <div class="col">
            <h6><i class="bi bi-calendar-event"></i> Release Date</h6>
            {{ episode.date|date('Y-m-d') }}
        </div>
        <div class="col">
            <h6><i class="bi bi-stopwatch"></i> Run Time</h6>
            {{ episode.runTime }}
        </div>
        <div class="col">
            <h6><i class="bi bi-file-text"></i> Primary Language</h6>
            {{ episode.language }}
        </div>
        <div class="col">
            <h6><i class="bi bi-tags"></i> Subjects</h6>
            {% for subject in episode.subjects %}
                {{ subject }}{{ not loop.last ? ',' : '' }}
            {% endfor %}
        </div>
        <div class="col">
            <h6><i class="bi bi-people-fill"></i> Contributions</h6>
            {% for contributions in episode.getContributionsGroupedByPerson %}
                {% set person = (contributions|first).person %}
                <div>
                    <a href='{{ path("person_show", {"id":person.id }) }}'>{{ person.fullName }}</a> -
                    {% for contribution in contributions %}
                        <a href='{{ path("contributor_role_show", {"id":contribution.contributorRole.id }) }}'>{{ contribution.contributorRole.label }}</a>{{ not loop.last ? ',' : '' }}
                    {% endfor %}
                </div>
            {% endfor %}
        </div>
        <div class="col">
            <h6><i class="bi bi-calendar-event"></i> Created</h6>
            {{ episode.created|date('Y-m-d') }}
        </div>
        <div class="col">
            <h6><i class="bi bi-calendar-event"></i> Last Updated</h6>
            {{ episode.updated|date('Y-m-d') }}
        </div>
        <div class="col">
            <h6><i class="bi bi-list-check"></i> Episode Status</h6>
            {% embed 'status/partial/badge.html.twig' with {
                'status': episode.status,
            } %}
            {% endembed %}
        </div>
    </div>
    <div class="my-3">
        <h6><i class="bi bi-bookshelf"></i> Bibliography</h6>
        {{ episode.bibliography|default('')|sanitize_html }}
    </div>
    <div class="my-3">
        <h6><i class="bi bi-list-task"></i> Permissions</h6>
        {{ episode.permissions|default('')|sanitize_html }}
    </div>
    <div class="my-3">
        <h6><i class="bi bi-pen"></i> Transcript</h6>
        {{ episode.transcript|default('')|sanitize_html }}
    </div>

    {% if episode.audios|length > 0 %}
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Episode Audio</h5>
                {% for audio in episode.audios %}
                    {% embed '@NinesMedia/audio/partial/list-item.html.twig' with {
                        'audio': audio,
                        'showActions': false,
                    } %}
                    {% endembed %}
                {% endfor %}
            </div>
        </div>
    {% endif %}

    {% if episode.pdfs|length > 0 %}
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Episode Transcript PDFs</h5>
                {% for pdf in episode.pdfs %}
                    {% embed '@NinesMedia/pdf/partial/list-item.html.twig' with {
                        'pdf': pdf,
                        'showActions': false,
                    } %}
                    {% endembed %}
                {% endfor %}
            </div>
        </div>
    {% endif %}
{% endblock %}
