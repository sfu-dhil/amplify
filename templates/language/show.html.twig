{% extends 'base.html.twig' %}

{% block title %}Language {{ language.label }}{% endblock %}

{% block breadcrumbs %}
    <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Home</a></li>
    <li class="breadcrumb-item"><a href="{{ path('language_index') }}">Languages</a></li>
    <li class="breadcrumb-item active" aria-current="page">{{ language.label }}</li>
{% endblock %}


{% block action_buttons %}
    {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <a href="{{ path('language_edit', {'id': language.id }) }}" class="btn btn-primary">
            <i class="bi bi-pencil-square"></i> Edit
        </a>
        <form class="d-inline-block" method="post" action="{{ path('language_delete', {'id': language.id }) }}" onsubmit="return confirm('Are you sure you want to delete this language?');">
            <input type="hidden" name="_method" value="DELETE">
            <input type="hidden" name="_token" value="{{ csrf_token("delete_language" ~ language.id) }}">
            <button class="btn btn-danger w-100"><i class="bi bi-trash"></i> Delete</button>
        </form>
    {% endif %}
{% endblock %}

{% block body %}
    {% embed '@NinesUtil/term/partial/show.html.twig' with {
        'term': language
    } %}
        {% block callback %}
            <tr>
                <th>Langauge Code</th>
                <td>{{ language.name }}</td>
            </tr>
            <tr>
                <th>Episodes</th>
                <td>
                    {% if language.episodes|length > 0 %}
                        <ul class="list-unstyled">
                            {% for episode in language.episodes %}
                                <li>
                                    <a href='{{ path("episode_show", {"podcast_id": episode.podcast.id, "id":episode.id }) }}'>
                                        {{ episode }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </td>
            </tr>
        {% endblock %}
    {% endembed %}
{% endblock %}
