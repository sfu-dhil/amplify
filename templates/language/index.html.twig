{% extends 'base.html.twig' %}

{% block title %}Language List{% endblock %}

{% block pageheader %}
    <h1>Language List</h1>
    <p class="count">
        Displaying {{ languages|length }} languages of {{ languages.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('language_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New </a>
            {% endif %}

            <a href="{{ path('language_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search </a>
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Language Code</th>
                <th>Label</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            {% for langauge in languages %}
                <tr>
                    <td>
                        <a href="{{ path('language_show', {'id': langauge.id}) }}">
                            {{ langauge.name }}
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('language_show', {'id': langauge.id}) }}">
                            {{ langauge.label }}
                        </a>
                    </td>
                    <td>
                        {{ langauge.description|raw }}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(languages) }}
    </div>

{% endblock %}
