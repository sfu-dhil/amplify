{% extends 'base.html.twig' %}

{% block title %}Contributor Role {{ contributor_role.label }}{% endblock %}

{% block breadcrumbs %}
    <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Home</a></li>
    <li class="breadcrumb-item"><a href="{{ path('contributor_role_index') }}">Contributor Roles</a></li>
    <li class="breadcrumb-item active" aria-current="page">{{ contributor_role.label }}</li>
{% endblock %}

{% block action_buttons %}
    {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <a href="{{ path('contributor_role_edit', {'id': contributor_role.id }) }}" class="btn btn-primary">
            <i class="bi bi-pencil-square"></i> Edit
        </a>
        <form class="d-inline-block" method="post" action="{{ path('contributor_role_delete', {'id': contributor_role.id }) }}" onsubmit="return confirm('Are you sure you want to delete this role?');">
            <input type="hidden" name="_method" value="DELETE">
            <input type="hidden" name="_token" value="{{ csrf_token("delete_contributor_role" ~ contributor_role.id) }}">
            <button class="btn btn-danger w-100"><i class="bi bi-trash"></i> Delete</button>
        </form>
    {% endif %}
{% endblock %}

{% block body %}
    {% embed '@NinesUtil/term/partial/show.html.twig' with {
        'term': contributor_role
    } %}
        {% block callback %}
            <tr>
                <th>MARC Relator Code</th>
                <td>{{ contributor_role.relatorTerm }}</td>
            </tr>
            <tr>
                <th>Contributors</th>
                <td>
                    {% if contributor_role.contributions|length > 0 %}
                        <ul class="list-unstyled">
                            {% for contribution in contributor_role.contributions %}
                                <li>
                                    {{ contribution }}
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </td>
            </tr>
        {% endblock %}
    {% endembed %}
{% endblock %}
