
<li class="list-group-item list-group-item-{{ count == 0 ? 'secondary' : 'danger' }} d-flex justify-content-between align-items-start">
    <div class="ms-2 me-auto text-truncate">
        <div class="fw-bold">{{ label }}</div>
    </div>
    {% if count == 0 %}
        <i class="bi bi-check-lg text-primary"></i>
    {% else %}
        <i class="bi bi-flag-fill text-danger"></i>
    {% endif %}
</li>
