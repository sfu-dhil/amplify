{% extends 'base.html.twig' %}

{% block title %}Import New Podcast{% endblock %}

{% block breadcrumbs %}
    <li class="breadcrumb-item"><a href="{{ path('podcast_index') }}">Podcasts</a></li>
    <li class="breadcrumb-item">Import</li>
    <li class="breadcrumb-item active" aria-current="page">New</li>
{% endblock %}

{% block body %}
    <h1 class="h4">Import New Podcast</h1>
    {{ form_start(form, {
        aria_label: 'Import Podcast',
    }) }}
    {{ form_widget(form) }}
    <div class="mb-3 text-center">
        <input type="submit" value="Import" class="btn btn-primary" />
        <a href="{{ path('podcast_index') }}" class="btn btn-warning"> Cancel </a>
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {% include '@NinesEditor/editor/widget.html.twig' %}
{% endblock %}
