{% extends 'base.html.twig' %}

{% block title %}Season Details {% endblock %}

 {% block pageheader %}
     <h1>Season Details</h1>
 {% endblock %}

{% block body %}

    {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <div class='btn-toolbar pull-right'>
            <div class='btn-group'>
                <a href="{{ path('season_edit', {'id': season.id }) }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-edit"></span> Edit </a>
            </div>
            <div class='btn-group'>
                <form class='delete-form' method="post" action="{{ path('season_delete', {'id': season.id }) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token("delete" ~ season.id) }}">
                    <button class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Delete</button>
                </form>
            </div>
        </div>
    {% endif %}

    {% embed 'season/partial/detail.html.twig' %}
    {% endembed %}

    <h2>Season Images</h2>

    {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <div class='btn-toolbar pull-right'>
            <div class='btn-group'>
                <a href="{{ path('season_new_image', {'id': season.id }) }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> Add Image </a>
            </div>
        </div>
        <div class='clearfix'></div>
    {% endif %}
    {% embed '@NinesMedia/image/ui/list.html.twig' with {
        'container': season,
        'path_add': 'season_add_image',
        'path_delete': 'season_delete_image',
        'path_edit': 'season_edit_image',
    } %}
    {% endembed %}

    {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <h2>Season Exports</h2>

        <div class='btn-toolbar pull-right'>
            <div class='btn-group'>
                <a href="{{ path('export_new', {'seasonId': season.id }) }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> Export Season
                </a>
            </div>
        </div>
        <div class='clearfix'></div>

        {% embed 'export/partial/table.html.twig' with {
            'exports': season.exports,
        } %}
        {% endembed %}
    {% endif %}

{% endblock %}


{% block javascripts %}
    {% if is_granted('ROLE_CONTENT_ADMIN') and season.hasActiveExport %}
        <script>
            setTimeout(
                () => {
                    window.location.reload()
                },
                30 * 1000 // 30 seconds
            )
        </script>
    {% endif %}
{% endblock %}
